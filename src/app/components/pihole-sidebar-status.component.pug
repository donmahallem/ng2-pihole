.user-panel
	.pull-left.image
		img.img-responsive(src='assets/images/logo.svg', alt='Pi-hole logo', style='display: table; table-layout: fixed; height: 67px;')
	.pull-left.info#infoPanel(ng-cloack)
		p Status
		a(href='#')
			i.fa.fa-circle(style='color:#7FFF00')
			span {{status?.status}}
		a(href='#',[ngStyle]="{'color':(status?.temperature===false)?'#AAAAAA':false}")
			i.fa.fa-fire([ngStyle]="{'color': (status?.temperature>60)?'#FF0000':'#3366FF'}")
			|  Temp:&nbsp;{{temperatureDisplay===false?"---":temperatureDisplay}}
		br
		a(href='#',[ngStyle]="{'color':(status?.loadAverage===false)?'#AAAAAA':false}")
			i.fa.fa-circle(style='color:#7FFF00')
			|  Load:&nbsp;{{loadAverageDisplay===false?"---":loadAverageDisplay}}
		br
		a(href='#',[ngStyle]="{'color':(status?.memoryUsage===false)?'#AAAAAA':false}")
			i.fa.fa-circle(style='color:#7FFF00')
			|  Memory usage:&nbsp;{{memoryUsageDisplay===false?"---":memoryUsageDisplay}}